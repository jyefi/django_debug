{
    "configurations": [
        {
            "name": "Attach (Remote Django App)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}/app",
                  "remoteRoot": "/app"
                }
              ]
        }
    ]
}
